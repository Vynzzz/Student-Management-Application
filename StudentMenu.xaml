<Page x:Class="CPE106_FOPI01_RAYNES_MOD3_EXAM.StudentMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CPE106_FOPI01_RAYNES_MOD3_EXAM"
      mc:Ignorable="d" 
      d:DesignHeight="100" d:DesignWidth="800"
      Title="StudentMenu">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>


        <Button x:Name="AddStudentBttn" Width="100" Height="30" Margin="5" Grid.Column="0" Click="AddStudentBttn_Click">
            <TextBlock Text="Add Student"/>
        </Button>
        <Button x:Name="EditStudentBttn" Width="100" Height="30" Margin="5" Grid.Column="1" Click="EditStudentBttn_Click">
            <TextBlock Text="Edit Student"/>
        </Button>
        <Button x:Name="DeletePersonBttn" Width="100" Height="30" Margin="5" Grid.Column="2" Click="DeletePersonBttn_Click">
            <TextBlock Text="Delete Student"/>
        </Button>
    </Grid>
</Page>
