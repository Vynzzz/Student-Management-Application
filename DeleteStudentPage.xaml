<Page x:Class="CPE106_FOPI01_RAYNES_MOD3_EXAM.DeleteStudentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CPE106_FOPI01_RAYNES_MOD3_EXAM"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="500"
      Title="DeleteStudentPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>


        <TextBlock Text="Delete Student Menu" Grid.Column="1" 
                   FontSize="20" HorizontalAlignment="Center" 
                   VerticalAlignment="Center" Foreground="LightCoral"
                   FontWeight="ExtraBold"/>

        <StackPanel Grid.Column="1" Grid.Row="1">

            <TextBlock Text="Complete Fields below:" Foreground="Coral" Margin="0 10" FontStyle="Italic"/>
            <Grid Margin="0 20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Student ID to delete:" Foreground="Coral" Margin="0 0 5 0" Grid.Column="0"/>
                <TextBox x:Name="TBStudentID" MinWidth="200" Text="Type Person ID to delete student entry for" Grid.Column="1"
                         Margin="5 0"/>
                <Button x:Name="CheckBttn" Grid.Column="2" Margin="5,0,5,0" Content="Check" Height="20" VerticalAlignment="Top" Click="CheckBttn_Click"/>
            </Grid>

            <DataGrid ItemsSource="{Binding}" x:Name="checkDtGrid" Height="45" Margin="50 20">

            </DataGrid>

            <Button x:Name="DeleteEntryBttn" Content="Delete Entry" Width="100" Margin="0 5" Click="DeleteEntryBttn_Click"/>

            <TextBlock x:Name="hiddenTextBlock" Foreground="Coral"/>
        </StackPanel>
    </Grid>
</Page>
